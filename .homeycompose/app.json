  "api": {
    "getUsers": {
      "method": "GET",
      "path": "/users"
    },
    "getUser": {
      "method": "GET",
      "path": "/users/:userId"
    },
    "getUserProjects": {
      "method": "GET",
      "path": "/users/:userId/projects"
    },
    "getUserProject": {
      "method": "GET",
      "path": "/users/:userId/projects/:projectId"
    },
    "getUserProjectTasks": {
      "method": "GET",
      "path": "/users/:userId/projects/:projectId/tasks"
    },
    "getUserProjectTask": {
      "method": "GET",
      "path": "/users/:userId/projects/:projectId/tasks/:taskId"
    },
    "getUserTasks": {
      "method": "GET",
      "path": "/users/:userId/tasks"
    },
    "getUserTask": {
      "method": "GET",
      "path": "/users/:userId/tasks/:taskId"
    },
    "createUserTask": {
      "method": "POST",
      "path": "/users/:userId/tasks"
    },
    "updateUserTask": {
      "method": "POST",
      "path": "/users/:userId/tasks/:taskId"
    },
    "closeUserTask": {
      "method": "POST",
      "path": "/users/:userId/tasks/:taskId/close"
    },
    "reopenUserTask": {
      "method": "POST",
      "path": "/users/:userId/tasks/:taskId/reopen"
    },
    "deleteUserTask": {
      "method": "DELETE",
      "path": "/users/:userId/tasks/:taskId"
    }
  }
}